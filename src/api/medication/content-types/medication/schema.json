{
  "kind": "collectionType",
  "collectionName": "medications",
  "info": {
    "singularName": "medication",
    "pluralName": "medications",
    "displayName": "Medication",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "medication_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "name": {
      "type": "string",
      "required": true,
      "minLength": 3
    },
    "amount": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Pill",
        "Injection",
        "Drop",
        "Solution",
        "Other"
      ],
      "required": true
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "reminders": {
      "type": "json",
      "required": false
    },
    "method": {
      "type": "enumeration",
      "enum": [
        "Before Eating",
        "After Eating",
        "Halfway through a meal"
      ],
      "required": true
    }
  }
}
